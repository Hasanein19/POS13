<?xml version="1.0" encoding="utf-8"?>
<templates id="pos_custom_template" inherit_id="point_of_sale.template" xml:space="preserve">
    <t t-extend="OrderReceipt">
        <t t-jquery=".pos-receipt" t-operation="replace">
            <div class="pos-receipt">
                <div style="text-align:right;">
                    <div><span t-esc='receipt.date.localestring' /></div>
                </div>
                <div style="text-align: center">
                    <h2 t-esc='receipt.name'></h2>
                </div>
                <t t-if='receipt.company.logo'>
                    <img style="width: 30%;display: block;margin: auto;" t-att-src='receipt.company.logo' alt="Logo" />
                </t>
                <div style="text-align:center;">
                    <t t-if='!receipt.company.logo'>
                        <h2 class="pos-receipt-center-align">
                            <t t-esc='receipt.company.name' />
                        </h2>
                    </t>
                    <t t-if='receipt.company.contact_address'>
                        <div>
                            <t t-esc='receipt.company.contact_address' />
                        </div>
                    </t>
                </div>
                <div style="text-align:right;">
                    <t t-if='receipt.company.phone'>
                        <div>Tel:
                            <t t-esc='receipt.company.phone' />
                        </div>
                    </t>
                    <t t-if='receipt.company.website'>
                        <div>
                            <t t-esc='receipt.company.website' />
                        </div>
                    </t>
                    <t t-if='receipt.header_html'>
                        <t t-raw='receipt.header_html' />
                    </t>
                    <t t-if='!receipt.header_html and receipt.header'>
                        <div>
                            <t t-esc='receipt.header' />
                        </div>
                    </t>
                    <br />
                </div>
                <!-- Orderlines -->
                <div class='orderlines'>
                    <div style="text-align:right; border-top: 1px dashed black;border-bottom: 1px dashed black;padding-top: 5px;padding-bottom: 5px;">
                        <div>Date :
                            <spam t-esc='receipt.date.localestring' />
                        </div>
                        <t t-if='receipt.client'>
                            <div>Client :
                                <t t-esc='receipt.client' />
                            </div>
                        </t>
                        <t t-if='receipt.cashier'>
                            <div class='cashier'>
                                <div>Served by
                                    <t t-esc='receipt.cashier' />
                                </div>
                            </div>
                        </t>
                    </div>
                    <br />
                    <table style="width: 100%;">
                        <tr style="border-bottom: 2px solid black;">
                            <th style="text-align:right;">المنتج</th>
                            <th style="text-align:right;">Qty</th>
                            <th style="text-align:right;">Amount</th>
                        </tr>
                        <t t-foreach="receipt.orderlines" t-as="line" style="border-bottom: 1px solid #ddd;font-family: initial;">
                            <tr>
                                <td>
                                    <div style="padding-top: 10px;padding-bottom: 10px;">
                                        <strong><span t-esc='line.product_name_wrapped[0]' /></strong>
                                        <t t-if="line.selective_universal_products">
                                            <div>
                                                <t t-set="zero_un_products" t-value="" />
                                                <t t-foreach="line.selective_universal_products" t-as="un_selective_product">
                                                    <t t-if="un_selective_product.price &gt; 0">
                                                        <li class="info">
                                                            <strong><t t-esc="un_selective_product.varient_name" /></strong>
                                                            <t t-if="un_selective_product.price">at
                                                                <t t-esc="widget.format_currency(un_selective_product.price,'Product Price')" />
                                                            </t>
                                                        </li>
                                                    </t>
                                                    <t t-else="">
                                                        <t t-set="zero_un_products" t-value="zero_un_products + un_selective_product.varient_name +', '" />
                                                    </t>
                                                </t>
                                                <li class="info" t-if="zero_un_products">
                                                    <strong><t t-esc="zero_un_products" /></strong>
                                                </li>
                                            </div>
                                        </t>
                                        <t t-if='line.discount !== 0'>
                                            <h5 style="margin-top: 0%;margin-bottom: 0%;font-size: 12px;color: #848484;">
                                                <t t-esc='line.discount' />% Discount
                                            </h5>
                                        </t>
                                    </div>
                                </td>
                                <td style="text-align: center;"><span t-esc="line.quantity" /></td>
                                <td style="text-align: center;"><span t-esc='widget.format_currency_no_symbol(line.price_display)' /></td>
                            </tr>
                            <tr style="border-bottom: 1px dashed black;">
                                <td class="pos-receipt-left-padding">
                                    <span t-if="line.line_note">Notes:</span>
                                    <t t-esc='line.line_note' />
                                </td>
                                <td>
                                </td>
                                <td>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
                <div>
                    <!-- Subtotal -->
                    <t t-set='taxincluded' t-value='Math.abs(receipt.subtotal - receipt.total_with_tax) &lt;= 0.000001' />
                    <t t-if='!taxincluded'>
                        <div style="text-align: right; border-top: 2px solid;margin-left: 30%; padding-top: 2%;">Subtotal : <span t-esc='widget.format_currency(receipt.subtotal)' class="pos-receipt-right-align" /></div>
                        <t t-foreach='receipt.tax_details' t-as='tax'>
                            <div style="text-align: right;">
                                <t t-esc='tax.name' />
                                <span t-esc='widget.format_currency_no_symbol(tax.amount)' class="pos-receipt-right-align" />
                            </div>
                        </t>
                    </t>
                    <br />
                    <!-- Total -->
                    <div style="text-align: right;font-weight: 700; border-top: 2px solid;margin-left: 30%;padding-top: 2%;">
                        TOTAL :
                        <span t-esc='widget.format_currency(receipt.total_with_tax)' />
                    </div>
                    <br />
                    <!-- Extra Payment Info -->
                    <t t-if='receipt.total_discount'>
                        <div style="text-align: right;border-top: 1px solid;margin-left: 30%;padding-top: 2%;">
                            Discounts
                            <span t-esc='widget.format_currency(receipt.total_discount)' />
                        </div>
                    </t>
                    <t t-if='taxincluded'>
                        <t t-foreach='receipt.tax_details' t-as='tax'>
                            <div style="border-top: 1px solid;padding-top: 2%;">
                                <span t-esc='tax.name' />
                                <span t-esc='widget.format_currency_no_symbol(tax.amount)' />
                            </div>
                        </t>
                        <div style="text-align: right;">
                            Total VAT :
                            <span t-esc='widget.format_currency(receipt.total_tax)' />
                        </div>
                    </t>
                </div>
                <br />
                <div style="border-top: 1px dashed black;padding-top: 5%;border-bottom: 1px dashed black;">
                    <!-- Payment Lines -->
                    <t t-foreach='paymentlines' t-as='line'>
                        <div>
                            <t t-esc='line.name' />
                            <span t-esc='widget.format_currency_no_symbol(line.get_amount())' class="pos-receipt-right-align" />
                        </div>
                    </t>
                    <br />
                    <div class="receipt-change">
                        CHANGE
                        <span t-esc='widget.format_currency(receipt.change)' class="pos-receipt-right-align" />
                    </div>
                    <br />
                </div>
                <div class='before-footer' />
                <!-- Footer -->
                <div t-if='receipt.footer_html' class="pos-receipt-right-align">
                    <t t-raw='receipt.footer_html' />
                </div>
                <div t-if='!receipt.footer_html and receipt.footer' class="pos-receipt-left-align">
                    <t t-esc='receipt.footer' />
                </div>
                <br />
                <div class='after-footer'>
                    <t t-foreach='receipt.paymentlines' t-as='line'>
                        <t t-if='line.ticket'>
                            <br />
                            <div class="pos-payment-terminal-receipt">
                                <t t-raw='line.ticket' />
                            </div>
                        </t>
                    </t>
                </div>
                <br />
                <div class="pos-receipt-order-data">
                    <div></div>
                    <div></div>
                </div>
            </div>
        </t>
    </t>
</templates>